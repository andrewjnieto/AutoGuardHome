{
    "version": 1,
    "formatters": {
        "standard": {
            "format": "%(asctime)s %(filename)s [%(levelname)s] %(message)s"
        }
    },
    "handlers": {
        "file": {
            "class": "logging.FileHandler",
            "filename": "/var/log/AutoGuardHome.log",
            "formatter": "standard"
        }
    },
    "root": {
        "handlers": ["file"],
        "level": "DEBUG"
    }
}
